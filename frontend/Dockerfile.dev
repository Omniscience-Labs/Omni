FROM node:22-slim

# Build deps for native modules (canvas, etc.)
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    make \
    g++ \
    build-essential \
    pkg-config \
    libcairo2-dev \
    libpango1.0-dev \
    libjpeg-dev \
    libgif-dev \
    librsvg2-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Deps layer - cached unless package files change
COPY package.json package-lock.json* ./

RUN npm ci

# App code copied at build, overwritten by volume at runtime
COPY . .

ENV NODE_ENV=development
ENV WATCHPACK_POLLING=true
EXPOSE 3000

CMD ["npm", "run", "dev"]
